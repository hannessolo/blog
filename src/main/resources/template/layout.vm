#macro(mainLayout)
  <!DOCTYPE html>
  <html>
  <head>
    <title>$title</title>
    <meta name="viewport" content="width=device-width, initial-scale=0.8">
    <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/shared.css">
  </head>
  <body>
    <div id="menu" class="hidden">
      <a href="/">
        <div id="menu-link">
          HOME
        </div>
      </a>
      <a href="/about">
        <div id="menu-link">
          ABOUT
        </div>
      </a>
      <a href="/contact">
        <div id="menu-link">
          CONTACT
        </div>
      </a>
    </div>
    <div id="main-container">
      <div id="header">
        <div id="hamburger">
          <i class="material-icons icon-large">
            menu
          </i>
        </div>
        <div id="title">
          <h1>blog.</h1>
        </div>
        <div id="invisible-hamburger">
          <i class="material-icons icon-large">
            menu
          </i>
        </div>
      </div>
      <div id="content">
        $bodyContent
      </div>
      <div id="footer">
        by Hannes Hertach
      </div>
    </div>

  <script type="application/javascript" src="/javascripts/headerAnimate.js"></script>
  <script type="application/javascript" src="/javascripts/showMenu.js"></script>

  </body>
  </html>
#end